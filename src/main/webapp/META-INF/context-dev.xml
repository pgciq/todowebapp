<?xml version="1.0" encoding="UTF-8"?>
<!-- Development configuration using H2 in-memory database -->
<Context path="/todo">
    <Resource 
        auth="Container" 
        driverClassName="org.h2.Driver" 
        logAbandoned="true" 
        maxIdle="30" 
        maxTotal="20" 
        maxWaitMillis="10000" 
        name="jdbc/todo" 
        username="sa" 
        password="" 
        removeAbandonedOnBorrow="true" 
        removeAbandonedTimeout="60" 
        type="javax.sql.DataSource" 
        url="jdbc:h2:file:./h2db/todo;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE;INIT=RUNSCRIPT FROM 'classpath:database/schema-h2.sql'"
        validationQuery="SELECT 1"
        testOnBorrow="true"
        testWhileIdle="true"
        timeBetweenEvictionRunsMillis="300000"
        minEvictableIdleTimeMillis="600000"
    />
</Context>
